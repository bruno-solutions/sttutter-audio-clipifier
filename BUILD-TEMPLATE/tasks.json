{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build-all",
            "dependsOrder":"sequence",
            "dependsOn":[
                "Compile Object Code",
                "Build Shared Library",
                "Cleanup"
            ]
        },
        {
            "label": "Compile Object Code",
            "type": "shell",
            "windows":{
                "command": "gcc -c -o ${workspaceFolder}\\audioprocess\\src\\replaygain.o ${workspaceFolder}\\audioprocess\\src\\replaygain.c"
            }
        },
        {
            "label": "Build Shared Library",
            "type": "shell",
            "windows":{
                "command": "gcc -shared -o ${workspaceFolder}\\audioprocess\\lib\\replaygain.dll ${workspaceFolder}\\audioprocess\\src\\replaygain.o"
            }
        },
        {
            "label": "Cleanup",
            "type": "shell",
            "windows":{
                "command": "del audioprocess\\src\\replaygain.o"
            }
        }
    ]
}
